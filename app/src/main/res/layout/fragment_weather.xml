<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.shm.fangbuch.Weather">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_icon"
                android:src="@drawable/w01d"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTemp"
                android:text="25째C"
                android:layout_toRightOf="@id/weather_icon"
                android:layout_centerVertical="true"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewOrt"
                android:text="Ibbenb체ren"
                android:layout_toRightOf="@id/textViewTemp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPressure"
                android:text="1023 hPa"
                android:layout_below="@id/textViewOrt"
                android:layout_toRightOf="@id/textViewTemp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMaxTemp"
                android:text="30째C"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMinTemp"
                android:text="10째C"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textViewMaxTemp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
